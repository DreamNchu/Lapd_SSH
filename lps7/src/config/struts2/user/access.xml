<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<package name="userAccess" namespace="/user" extends="struts-default,json-default">

		<action name="loginPage" class="userStatusAction" method="login">
			<result name="success">
				/user/loginPage.jsp
			</result>
			<result name="input" type="redirect">
				/user/main
			</result>
		</action>

		<action name="logOut" class="userStatusAction" method="logOut">
			<result name="success">
				/user/login.jsp
			</result>
		</action>

		<action name="access" class="userAccessAction" method="main">
			<result name="success" type="redirect">
				/user/main<!-- 登录成功转向主界面 -->
			</result>
			<result name="error" type="redirect">
				/user/login <!-- 失败重新登录 -->
			</result>
		</action>

		<action name="signInPage" class="userSignInAction">
			<result>
				/user/signInPage.jsp
			</result>
		</action>

		<action name="signIn" class="userSignInAction" method="signIn">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>

	</package>

</struts>